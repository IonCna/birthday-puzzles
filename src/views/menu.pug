doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/global.css")
        link(rel="stylesheet", href="/styles/menu.css")
        script(src="/scripts/menu.js" defer) 
        title=title
    body
        ul(class="menu")
            each puzzle in status
                a(class="puzzle" href=`/puzzle/${puzzle.redirects}`)
                    label #{puzzle.difficulty}
                    if puzzle.complete
                        label COMPLETADO
        .code
            input(type="text", name="code" id="code")
            button(class="btn" id="send") Enviar
            .error-label(id="error")
                .bars(id="bars")
                    .bar1
                    .bar2
                p(class="text") c√≥digo incorrecto